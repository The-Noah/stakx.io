{% extends '@theme/_layouts/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <section class="col-lg-9 c-{{ content_class | default('content') }} {{ content_classes | default() }}">
                {% block content %}{% endblock %}
            </section>

            <aside class="col-lg-3 p-4 u-background u-background--lpurple c-{{ aside_class | default('aside') }} {{ aside_classes | default() }}">
                {% block aside %}{% endblock %}
            </aside>
        </div>
    </div>
{% endblock %}
